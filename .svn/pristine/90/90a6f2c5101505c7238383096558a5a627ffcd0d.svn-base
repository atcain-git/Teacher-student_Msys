        public void Table()
        {
            dataGridView1.Rows.Clear();
            DAO dao = new DAO();
            string sql = "select id,name,number,introduction from teacher";
            IDataReader dc = dao.read(sql);
            string a0, a1, a2, a3;
            while (dc.Read())
            {
                a0 = dc[0].ToString();
                a1 = dc[1].ToString();
                a2 = dc[2].ToString();
                a3 = dc[3].ToString();
                string[] table = { a0, a1, a2, a3 };
                //string[] intro = { a3 };
                //textBox4.Text=a3;
                dataGridView1.Rows.Add(table);

            }
            dc.Close();
            dao.DaoClose();
        }
