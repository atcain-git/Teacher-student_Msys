                message.Id = str;
                b_mess.select_info(message);
                sName.Text = message.Name;
                Sex.Text = message.Sex; Phone.Text = message.Phone;
                Major.Text = message.Major; Grade.Text = message.Grade;
                Email.Text = message.Email; College.Text = message.College;
